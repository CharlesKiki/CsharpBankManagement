            <TextBox x:Name="txt_b_dk_fkcard" HorizontalAlignment="Left" Height="26" Margin="288,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="利       率：" HorizontalAlignment="Left" Height="31" Margin="318,113,0,0" VerticalAlignment="Top" Width="71" Foreground="Black"/>
            <TextBox x:Name="txt_b_dk_lv" HorizontalAlignment="Left" Height="26" Margin="383,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="甲       方：" HorizontalAlignment="Left" Height="31" Margin="318,146,0,0" VerticalAlignment="Top" Width="71" Foreground="Black"/>
