            <TextBox x:Name="txt_b_ht_stat" HorizontalAlignment="Left" Height="26" Margin="383,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="合同所属分店：" HorizontalAlignment="Left" Height="31" Margin="318,246,0,0" VerticalAlignment="Top" Width="93" Foreground="Black"/>
            <ComboBox x:Name="cmb_b_ofd" HorizontalAlignment="Left" Height="22" Margin="411,246,0,0" VerticalAlignment="Top" Width="119" Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Label Content="中 介 人 ：" HorizontalAlignment="Left" Height="31" Margin="318,275,0,0" VerticalAlignment="Top" Width="71" Foreground="Black"/>
            <TextBox x:Name="txt_b_jt_zjr" HorizontalAlignment="Left" Height="26" Margin="383,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
