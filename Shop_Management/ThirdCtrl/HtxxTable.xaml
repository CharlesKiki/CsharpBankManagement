            <TextBox x:Name="txt_b_ht_text" HorizontalAlignment="Left" Height="111" Margin="29,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="501" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Window>
