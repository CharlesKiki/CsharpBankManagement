            <TextBox x:Name="txt_b_ht_sdate" HorizontalAlignment="Left" Height="26" Margin="123,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="合同结束时间：" HorizontalAlignment="Left" Height="30" Margin="29,210,0,0" VerticalAlignment="Top" Width="89" Foreground="Black"/>
            <TextBox x:Name="txt_b_ht_edate" HorizontalAlignment="Left" Height="26" Margin="123,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="总借款额：" HorizontalAlignment="Left" Height="31" Margin="29,241,0,0" VerticalAlignment="Top" Width="71" Foreground="Black"/>
