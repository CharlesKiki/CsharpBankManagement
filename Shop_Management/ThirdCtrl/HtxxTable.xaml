            <TextBox x:Name="txt_b_ht_remark" HorizontalAlignment="Left" Height="29" Margin="285,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
