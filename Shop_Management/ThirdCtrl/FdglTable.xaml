            <TextBox x:Name="txt_b_username" HorizontalAlignment="Left" Height="42" Margin="154,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="分店地址：" HorizontalAlignment="Left" Height="48" Margin="49,74,0,0" VerticalAlignment="Top" Width="131" Foreground="Black"/>
            <TextBox x:Name="txt_b_passwd" HorizontalAlignment="Left" Height="40" Margin="154,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="336" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
            <Label Content="分店积金：" HorizontalAlignment="Left" Height="49" Margin="49,133,0,0" VerticalAlignment="Top" Width="131" Foreground="Black"/>
            <TextBox x:Name="txt_b_phone" HorizontalAlignment="Left" Height="42" Margin="154,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" SelectionBrush="#FF47C5D8" Background="{x:Null}" BorderBrush="Black"/>
        </Grid>
    </Grid>
</Window>
